{
    "compilerOptions": {
        "target": "ESNext",
        "useDefineForClassFields": true,
        "module": "ESNext",
        "moduleResolution": "Node",
        "strict": true,
        "jsx": "preserve",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "lib": ["ESNext", "DOM"],
        "skipLibCheck": true,
        "types": []
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist"]
}
