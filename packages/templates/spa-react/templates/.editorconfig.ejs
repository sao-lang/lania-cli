# EditorConfig is awesome: https://EditorConfig.org

root = true

[*]
charset = utf-8
end_of_line = <%= endOfLine || 'lf' %>        # 行尾符，常用 lf 或 crlf
indent_style = <%= indentStyle || 'space' %>  # 缩进风格，space 或 tab
indent_size = <%= indentSize || 4 %>           # 缩进大小，数字或者 tab
trim_trailing_whitespace = true                 # 去除行尾多余空格
insert_final_newline = true                      # 文件末尾插入新行

[*.md]
trim_trailing_whitespace = false                 # markdown 中保留空格

[*.{js,jsx,ts,tsx,json,css,scss,less,sass,stylus,html,vue}]
indent_style = <%= indentStyle || 'space' %>
indent_size = <%= indentSize || 4 %>
