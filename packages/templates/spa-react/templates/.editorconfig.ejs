# 顶层，停止向上查找
root = true

# 所有文件的通用配置
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2
max_line_length = 100

# JSON / JSONC 配置（比如 package.json、tsconfig.json）
[*.{json,jsonc}]
indent_size = 2
trim_trailing_whitespace = false  # JSON 里不要删空格（有时需要保留）

# JavaScript / TypeScript / JSX / TSX
[*.{js,jsx,ts,tsx}]
indent_size = 2
quote_type = single  # 不是标准字段，但某些编辑器支持自定义（可在 lint 里统一）
insert_final_newline = true

# CSS / SCSS / Less
[*.{css,scss,less}]
indent_size = 2

# Markdown
[*.md]
trim_trailing_whitespace = false  # Markdown 中尾随空格有意义（比如换行）
max_line_length = 100

# Shell 脚本
[*.sh]
indent_style = space
indent_size = 2
end_of_line = lf
insert_final_newline = true

# Makefile 必须用 tab
[Makefile]
indent_style = tab

# Git 提交信息等纯文本
[*.txt]
trim_trailing_whitespace = false

# 特定目录或生成文件的例外（比如构建输出）
[build/**]
trim_trailing_whitespace = false
insert_final_newline = false
